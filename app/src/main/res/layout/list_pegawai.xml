<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="12dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:orientation="vertical"
        android:background="#DA583636"
        android:padding="10dp">
        <TextView
            android:id="@+id/namapegawai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#D6CDCB"
            android:text="Nama Pegawai"/>

        <TextView
            android:id="@+id/plusdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="+"
            android:textAlignment="textEnd"
            android:textColor="#D6CDCB"
            android:textSize="30dp"
            android:gravity="end" />
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/nippegawai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#D6CDCB"
            android:text="NIP Pegawai"
            android:visibility="gone"/>
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/userpegawai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#D6CDCB"
            android:visibility="gone"
            android:text="Username Pegawai" />
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/passwordpegawai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#D6CDCB"
            android:visibility="gone"
            android:text="Password Pegawai"/>

        <TextView
            android:id="@+id/minusdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="-"
            android:textAlignment="textEnd"
            android:textColor="#D6CDCB"
            android:textSize="50dp"
            android:visibility="gone"
            android:gravity="end" />
    </LinearLayout>



</android.support.v7.widget.CardView>