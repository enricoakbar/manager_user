<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity"
    android:background="@drawable/background">


    <LinearLayout
        android:id="@+id/linear_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="25dp">


        <ImageView
        android:id="@+id/daftar_pegawai"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/daftarpegawai"
        />
        <ImageView
            android:id="@+id/news"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/news"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_category_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/task"
            android:layout_width="101dp"
            android:layout_height="70dp"
            android:layout_alignBottom="@+id/linear_category_layout1"
            android:layout_marginRight="75dp"
            android:src="@drawable/task" />
        <ImageView
            android:id="@+id/nilai"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/nilai"
            />

    </LinearLayout>

</RelativeLayout>