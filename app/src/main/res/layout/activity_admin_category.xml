<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity"
    android:background="@drawable/background">

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/registerpegawai"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/registerpegawai"
        android:layout_alignParentLeft="true"/>
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/daftar_pegawai"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/daftarpegawai"
        android:layout_alignParentRight="true"
        />
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/news"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/news"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/registerpegawai"/>
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/task"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/task"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/daftar_pegawai"/>
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/nilai"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/nilai"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/news"/>

</RelativeLayout>