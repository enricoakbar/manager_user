<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="12dp"
    android:layout_margin="7dp">


    <LinearLayout
        android:id="@+id/tugasa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:background="@color/merah_gelap"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tugas_wajib_judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tugas"
            android:textAlignment="center"
            android:textColor="@color/putih"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tugas_wajib_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="note"
            android:padding="10dp"
            android:textColor="#D6CDCB"
            android:textSize="18sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="250dp"
        android:background="@color/putih"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Ket_tugas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="Keterangan Tugas"
            android:textAlignment="center"
            android:textColor="@color/merah_gelap"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/Konfirmasi_Tugas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:padding="5dp"
            android:text="Konfirmasi"
            android:textAlignment="center"
            android:textColor="@color/merah_gelap"
            android:textSize="15sp"
            android:textStyle="bold" />



    </LinearLayout>

</android.support.v7.widget.CardView>