<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TambahTugasActivity"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/pegawaitext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TUGAS PEGAWAI"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/coloritem"
        android:fontFamily="monospace"/>
    <TextView
        android:id="@+id/usernamepegawai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pegawaitext"
        android:text="Masukkan Username Pegawai sesuai Data."
        android:textColor="@color/coloritem"
        android:textSize="18sp"
        android:textStyle="italic"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        />


    <EditText
        android:id="@+id/namapegawaitugas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernamepegawai"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="20dp"
        android:hint="Username Pegawai"
        android:textColorHint="@color/abuabu"
        android:textColor="@color/coloritem"
        android:textStyle="italic"
        android:textSize="20sp"
        android:inputType="text"
        android:background="@drawable/input_design"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/tugaswajib"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginEnd="62dp"
            android:layout_marginRight="62dp"
            android:src="@drawable/tugaswajib"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tugastambahan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/tugastambahan"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginEnd="34dp"
            android:layout_marginRight="34dp"
            android:src="@drawable/tugastambahan"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tugaswajib"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tambahtugaswajib"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="148dp"
            android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp"
            android:fontFamily="serif"
            android:text="Tugas Wajib"
            android:textColor="@color/coloritem"
            app:layout_constraintEnd_toStartOf="@+id/tambahtugastambahan"
            app:layout_constraintTop_toTopOf="@+id/tugaswajib" />

        <TextView
            android:id="@+id/tambahtugastambahan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:layout_marginLeft="76dp"
            android:layout_marginTop="148dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="serif"
            android:text="Tugas Tambahan"
            android:textColor="@color/coloritem"
            app:layout_constraintBottom_toBottomOf="@+id/tambahtugaswajib"
            app:layout_constraintStart_toEndOf="@+id/tugaswajib"
            app:layout_constraintTop_toTopOf="@+id/tugastambahan"
            app:layout_constraintVertical_bias="0.0" />
    </android.support.constraint.ConstraintLayout>


</RelativeLayout>