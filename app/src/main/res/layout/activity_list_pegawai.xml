<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListPegawaiActivity"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/pegawailist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daftar Pegawai"
        android:paddingLeft="18dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="23sp"
        android:fontFamily="serif"
        android:textColor="@color/coloritem"
        android:layout_marginBottom="20dp"
        android:background="@drawable/drawable1"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listpegawai"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/pegawailist">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>